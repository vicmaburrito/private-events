<p id="notice"><%= notice %></p>
  <div class="container">
    <div class="columns is-centered">
      <div class="colum is-three-quarters">
        <h1 class="title is-3">Events</h1>
            <div class="box descrip">
            
              <div class="level-item">
                <p>Event Name: </p>
                <span><%= @event.name %></span>
              </div>
              <div class="box">
                <div class="level-item">
                  <p>Time: </p>
                    <span><%= @event.start_time.strftime(" %m-%d at: %H:%M") %><strong> --- </strong><%= @event.end_time.strftime("%m-%d-%Y at: %H:%M")  %></span>
                </div>
              </div>
              <div class="level-item">
                <p>User id:</p>
                  <span><%= @event.user_id %></span>
              </div>
              <div class="level-item">
                <p>location:</p>
                <span><%= @event.location %></span>
              </div>
              <div class="level-item">
                <p>Description:</p>
                <span><%= @event.description %></span>
              </div>
              <div class="level-item">
                <p>Date:</p>
                <span><%= @event.date.strftime("%m-%d") %></span>
              </div>
          <% if user_signed_in? %>
              <div class="card">
                <footer class="card-footer">
                  <%= link_to 'Back', events_path, class:"card-footer-item" %>
                  <%= link_to 'Edit', edit_event_path(@event), class:"card-footer-item"%>
                </footer>
              </div>
            </div><br>
            <%else%>
            <%= link_to 'Back', events_path, class:"button is-info" %>
          <%end%>
      </div>
    </div>
  </div>
</div>
